      //- Run Script
      script.
        clientID="#{clientID}"
      style.
        body {
          font-family: 'Quicksand', sans-serif;
        }
        .dropShadow {
          box-shadow: 0 4px 50px 0 rgba(0, 0, 0, 0.13), 0 10px 25px 0 rgba(0, 0, 0, 0.13);
        }
        .dropBoxShadow{
            box-shadow: 0 4px 9px 0 rgba(0, 0, 0, 0.1), 0 4px 9px 0 rgba(0, 0, 0, 0.1);
        }
        .rcorners {
          border-radius: 12px;
          padding: 20px;
        }
        .list-group-item:last-child{
          border-radius: 12px;
        }
        .chat
        {
            list-style: none;
            margin: 0;
            padding: 0;
        }
        .panel .slidedown .glyphicon, .chat .glyphicon
        {
            margin-right: 5px;
        }
        .panel-body
        {
            overflow-y: scroll;
            height: 250px;
        }
        #scrollbar{
            height:656px;
            overflow:auto;
        }
        #scrollbarBody{
            height:496px;
            overflow:auto;
        }
        .borderless{
          border : hidden;
        }
        .chatBox{
          border-width: 1px; 
          border-color: rgb(221, 221, 221);
          border-radius: 20px; 
          padding: 11px;
          box-shadow: 0 3px 6px 3px rgb(232, 232, 232);
          margin-bottom:9px;
        }
