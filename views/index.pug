        #topicList a.list-group-item.list-group-item-action.flex-column.dropBoxShadow.align-items-start.rcorners{
            margin-bottom:20px;
            border-top-right-radius:12px;
            border-top-left-radius:12px;
        }
        #unTopicList a.list-group-item.list-group-item-action.flex-column.dropBoxShadow.align-items-start.rcorners{
            margin-bottom:20px;
            border-top-right-radius:12px;
            border-top-left-radius:12px;
            background-color: rgb(221, 221, 221);
            opacity: 0.70;
