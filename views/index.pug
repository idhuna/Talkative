extends layout

block content
  html
    head
      link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css')
      link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
      link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.0.10/css/all.css', integrity='sha384-+d0P83n9kaQMCwj8F4RJB66tzIwOKmrdb46+porD/OvrJ+37WqIM7UoBtwHO6Nlg', crossorigin='anonymous')
      link(href='https://fonts.googleapis.com/css?family=Quicksand', rel='stylesheet')
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js') 
      link(rel='stylesheet', href='index.css')
      
      //- Run Script
      script.
        clientID="#{clientID}"
    body
      .d-flex.justify-content-between.align-items-end
        h1=title
        h3.float-right(style="margin-right:40px") 
          strong
              | Name : 
          small
              | #{clientID}
      .container-fluid
        .row
          //- First Col
          .col-md-1.rcorners.dropShadow(style='background:linear-gradient(234deg, rgba(28, 155, 255, 0.84), #117de7);max-width:5%;')
            div(style='font-size:25px;color:white;margin-right:20px;')
              i.fas.fa-user-plus
              i.fas.fa-user-plus
          //- Second Col
          #scrollbar.col-md-5
            #groupList.list-group.md-5  
            #unGroupList.list-group.mt-3  
                h3.mb-1.text-muted Unsubscribed
                a.list-group-item.list-group-item-action.flex-column.dropBoxShadow.align-items-start.rcorners(href='#')
                    .d-flex.w-100.justify-content-between
                        h5.mb-1 Group 1
                        button.close(type='button', aria-label='Close')
                            span(aria-hidden='true') ×
                    .d-flex
                        p.mb-1
                          | Donec id elit non mi porta gravida at eget metusDonec id elit non mi porta gravida at eget metusDonec id elit non mi porta 
                        .my-auto.list-group
                            small(style=" width: 74px;") 30 days ago
                            span.badge.badge-primary.badge-pill.mx-auto 10
            i.createGroup-buttonGroup.fas.fa-users.fa-pull-right(data-toggle='modal', data-target='#groupGroupModal')
            #groupGroupModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='groupModalLabel', aria-hidden='true')
              .modal-dialog(role='document')
                .modal-content
                  .modal-header
                    h5#groupModalLabel.modal-title Join group
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                      span(aria-hidden='true') ×
                  form#joinGroup
                    .modal-body
                      .form-group
                        label.col-form-label(for='nameGroup') Group
                        input#joinedGroup.form-control(type='text', placeholder='Group')
                    .modal-footer
                      button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                      button#joinGroupBtn.btn.btn-primary(type='submit', data-dismiss='modal') Join

            i.createGroup-button.fas.fa-plus-circle.fa-pull-right(data-toggle='modal', data-target='#groupModal')
            #groupModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='groupModalLabel', aria-hidden='true')
              .modal-dialog(role='document')
                .modal-content
                  .modal-header
                    h5#groupModalLabel.modal-title Create a group
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                      span(aria-hidden='true') ×
                  .modal-body
                    form#createGroup
                      .form-group
                        label.col-form-label(for='nameGroup') Group
                        input#nameGroup.form-control(type='text', placeholder='Group')
                  .modal-footer
                    button#addGroupBtn.btn.btn-primary(type='submit', data-dismiss='modal') Create
                    button.btn.btn-secondary(type='button', data-dismiss='modal') Close

          //- Third column
          .col-md-6.rcorners.dropShadow
            .container
              .row
                //- .col-lg-12
                .card.card-primary.scrollbar-morpheus-den.borderless
                  .card-header
                    div
                        strong#chatHeader(style="font-size:29px;") 
                            |Select Some Chat
                        a.text-muted.float-right(href='#',style="margin-top: 13px;")
                            i.fas.fa-sign-out-alt.fa-lg.mr-3
                                //- | Leave Group
                        a.text-muted.float-right(href='#',style=" margin-top: 13px;")
                            i.fas.fa-sync-alt.fa-lg.mr-3
                            //- | Refresh
                
                  #scrollbarBody.rcorners
                    div
                      ul#chatMessage.chat

                  .card-footer
                    .input-group
                      input#btn-input.borderless.form-control.form-control-sm(type='text', placeholder='Type your message here...',style="outline:none")
                      button#btn-chat.btn.btn-info.btn-sm.ml-3
                        | Send



          //- End Html
          script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js', integrity='sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q', crossorigin='anonymous')
          script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js', integrity='sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl', crossorigin='anonymous')
          
          // socket.io
          script(src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.0/socket.io.js')
          script(src='/chat.js')
          script(src='/genDOM.js')
